<?xml version="1.0" encoding="UTF-8"?>
<dialog name="dialogPrefs" modal="true" resizable="true"
    width="500" height="400"
	columns="1" gap="20" top="4" left="4" bottom="4" right="4"
>
    <panel columns="3" weightx="1" weighty="1" gap="20">
        <label weightx="1" />
        <label weightx="1" />
        <label weightx="1" />

        <label weightx="1" />
        <label text="Whose counts do you want to see (in addition to your own)?" weightx="6" />
        <label weightx="1" />

        <label weightx="1" />
        <panel columns="1" gap="3" weightx="6" weighty="1">
	        <label text="(Ctrl-click to choose multiple people.)" weightx="1" />
	        <list name="users" selection="multiple" weightx="1" weighty="1" />
        </panel>
        <label weightx="1" />
    </panel>

	<panel columns="2" gap="10" halign="center">
		<button text="OK" action="prefsOK(dialogPrefs)" />
		<button text="Cancel" action="prefsCancel(dialogPrefs)" />
	</panel>
</dialog>
