<%@ include file="htmlhead.jsp" %>
<%@ page session="false" %>
<%@ page import="javax.jdo.PersistenceManager" %>
<%@ page import="nu.mine.mosher.jdotest.Item" %>
<%@ page import="nu.mine.mosher.jdotest.Perm" %>
<%
	String s = request.getParameter("item");
	PersistenceManager pm = (PersistenceManager)request.getAttribute("pm");
	pm.currentTransaction().begin();
	Item item = new Item();
	item.setName(s);
	pm.makePersistent(item);
	pm.currentTransaction().commit();
%>
<head>
<title>Added</title>
</head>
<body>
<p>
"<%=s%>" has been added.
</p>
<p>
&lt;<a href="index.jsp">list</a>&gt;
</p>
</body>
